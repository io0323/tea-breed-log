# GitHub Language Detection Override
# Force TypeScript detection for specific files
*.ts linguist-language=TypeScript
*.tsx linguist-language=TypeScript
*.js linguist-language=TypeScript
*.jsx linguist-language=TypeScript

# Reduce HTML detection weight
*.html linguist-detectable=false
index.html linguist-detectable=false

# CSS files
*.css linguist-language=CSS

# Configuration files
*.json linguist-language=JSON
*.config.js linguist-language=TypeScript
*.config.ts linguist-language=TypeScript

# Test files
*.test.ts linguist-language=TypeScript
*.test.tsx linguist-language=TypeScript
*.spec.ts linguist-language=TypeScript
*.spec.tsx linguist-language=TypeScript

# Documentation
*.md linguist-language=Markdown
*.txt linguist-language=Text

# Build files
*.lock linguist-generated=true
package-lock.json linguist-generated=true
yarn.lock linguist-generated=true

# Generated files
*.d.ts linguist-generated=true
tsconfig.tsbuildinfo linguist-generated=true
vite.config.d.ts linguist-generated=true

# Ignore large HTML files for language detection
public/*.html linguist-detectable=false
